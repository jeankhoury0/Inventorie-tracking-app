<div class="container">
    <h1 class="text-primary">Inventory Control System</h1>
    
    <table class="table">
        <caption>List of all the items</caption>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Actions</th>
        </tr>
        <% @inventory_items.each do |inventory_item| %>
        <tr>
            <td> <%= inventory_item.title %> </td>
            <td> 
                <a href="<%= inventory_item_path(inventory_item) %>">Show</a>
                <a href="">Edit</a>
                <a href="">Delete</a>
            </td>

        <% end %>
        </tr>
    </table>
    
    <a href="/inventory_item/new" class="btn btn-primary">Create New Item</a>

    
</div>

