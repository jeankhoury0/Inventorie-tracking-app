<div class="m-5">
<%= form_with(model: inventoryItem) do |form| %>
  <%= form.label :title, class:"form-label"%>
  <%= form.text_field :title, class:"form-control"%>
  <br>
  <%= form.label :price, class:"form-label"%>
  <%= form.number_field :price, class:"form-control"%>
  <br>
  <%= form.label :remark, class:"form-label" %>
  <%= form.text_area :remark, class:"form-control" %>
  <br>

  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>


  <% if inventoryItem.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(inventoryItem.errors.count, "error") %> prohibited this inventory from being saved:</h2>

      <ul>
        <% inventoryItem.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<% end %>
</div>